{
  "name": "glo-backend",
  "version": "0.1.0",
  "author": {
    "name": "Yaroslav Romanov",
    "email": "yaroslaw.romanov@architech.nyc"
  },
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "node --inspect=5859 -r ts-node/register ./src/index.ts",
    "watch": "nodemon",
    "build": "tsc && cp -R src/schema dist",
    "start:prod": "node .",
    "lint": "node_modules/.bin/eslint --max-warnings=4 --ext .js,.ts  --ignore-path .gitignore src/",
    "lint:fix": "node_modules/.bin/eslint --max-warnings=4 --ext .js,.ts  --ignore-path .gitignore --fix src/"
  },
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.18.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.1.0",
    "express": "^4.17.1",
    "graphql-import": "^0.7.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.3",
    "@graphql-codegen/schema-ast": "^1.17.3",
    "@graphql-codegen/typescript": "^1.17.3",
    "@graphql-codegen/typescript-operations": "^1.17.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.8",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.0.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js, ts}": [
      "node_modules/.bin/eslint --fix --max-warnings=4",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
